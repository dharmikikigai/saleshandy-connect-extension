{
  "name": "Saleshandy Connect: Email Tracker & Finder",
  "description": "All-in-one tool to track opens & find email addresses in one click.",
  "version": "3.0.0",
  "manifest_version": 3,
  "homepage_url": "https://saleshandy.com",

  "icons": {
    "16": "assets/icons/16_16.png",
    "32": "assets/icons/32_32.png",
    "48": "assets/icons/48_48.png",
    "64": "assets/icons/64_64.png",
    "128": "assets/icons/128_128.png"
  },

  "action": {
    "default_icon": "assets/icons/sh-logo.png",
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "worker_wrapper.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "scripting",
    "notifications",
    "activeTab",
    "cookies",
    "webNavigation"
  ],

  "host_permissions": ["<all_urls>"],

  "web_accessible_resources": [
    {
      "resources": [
        "index.js",
        "app.js",
        "assets/icons/beacon.png",
        "index.html",
        "assets/icons/shLogo.svg",
        "assets/images/circle.svg",
        "assets/images/header.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://pyxis-edge.lifeisgoodforlearner.com/* wss://*;"
  }
}
